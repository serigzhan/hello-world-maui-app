<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldMauiApp.MainPage">

    <Grid x:Name="LogForm" Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label 
            x:Name="LogResultMessage" 
            Grid.Row="1" 
            FontSize="16"
            HorizontalOptions="Center" />

        <Entry
            x:Name="UserNameEntry"
            Grid.Row="1"
            Placeholder="Username"
            WidthRequest="300" 
            HeightRequest="40"
            TextChanged="OnUsernameEntryChanged"/>

        <Button 
            Grid.Row="2"
            x:Name="LogButton" 
            Text="Log" 
            WidthRequest="300" 
            HeightRequest="40"
            Clicked="OnLogButtonClicked"/>
    </Grid>

</ContentPage>
